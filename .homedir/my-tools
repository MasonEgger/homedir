#!/bin/bash

# Display available custom tools in .homedir

echo "Available custom tools:"
echo ""
echo "  lmsify <file.md>             - Convert Markdown to HTML for LMS (copies to clipboard)"
echo "  wordcount <path> [options]   - Count words in files/directories, excluding Markdown code blocks"
echo "    Options:"
echo "      -r, --recursive            - Process directories recursively"
echo "      -f, --format {text|json|csv} - Output format (default: text)"
echo "      -o, --output FILE          - Save output to file"
echo "      -e, --extensions EXT...    - File extensions to process (default: .md .markdown)"
echo "      --no-exclude-code-blocks   - Count words in code blocks"
echo "  count_words.sh               - Recursively count words in all markdown files"
echo ""
echo "Other useful aliases from .zshrc:"
echo "  uuid               - Generate a lowercase UUID with colors"
echo "  cdr                - Navigate to git repository root"
echo "  venv-on            - Activate Python virtual environment at git root"
echo "  django             - Shortcut for 'python manage.py'"
