#!/bin/bash

# Display available custom tools in .homedir

echo "Available custom tools:"
echo ""
echo "  lmsify <file.md>    - Convert Markdown to HTML for LMS (copies to clipboard)"
echo "  wordcount <file>    - Count words in file, excluding Markdown code blocks"
echo ""
echo "Other useful aliases from .zshrc:"
echo "  uuid               - Generate a lowercase UUID with colors"
echo "  cdr                - Navigate to git repository root"
echo "  venv-on            - Activate Python virtual environment at git root"
echo "  django             - Shortcut for 'python manage.py'"
